<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/width_535"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/space_30"
              android:paddingLeft="@dimen/space_20"
              android:paddingRight="@dimen/space_20"
              android:paddingTop="@dimen/space_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="@dimen/font_24"
            android:textColor="@color/black_3f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uploading"/>

        <TextView
            android:textSize="@dimen/font_24"
            android:textColor="@color/black_3f"
            android:id="@+id/upload_tv_description"
            style="@style/comment_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:text="@string/upload_resume"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/upload_pb_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_horizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_20"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/upload_tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_18"
            android:textColor="@color/red_E3"
            android:paddingLeft="@dimen/space_20"
            android:text="30%"
            />
    </LinearLayout>


</LinearLayout>