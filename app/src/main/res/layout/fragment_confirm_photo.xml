<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/space_95"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="@dimen/photo_confirm_header_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo_iv_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photo_confirm_header_height"
                android:src="@mipmap/header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/photo_tv_retake"
                    style="@style/photo_confirm_text"
                    android:text="@string/photo_retake"/>

                <TextView
                    android:id="@+id/photo_tv_use"
                    style="@style/photo_confirm_text"
                    android:text="@string/photo_use_photo"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>