<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/photo_ll_take_photo"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:background="@mipmap/take_photo_rectangle"
        android:layout_width="@dimen/photo_container_width"
        android:layout_height="@dimen/photo_container_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_95"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_marginTop="@dimen/space_166"
            android:id="@+id/photo_iv_take_photo"
            android:layout_width="@dimen/photo_camera_icon_height"
            android:layout_height="@dimen/photo_camera_icon_width"
            android:src="@mipmap/take_photo"/>

        <TextView
            android:layout_marginTop="@dimen/space_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_25"
            android:textColor="@color/red_E3"
            android:text="@string/photo_take_photo"/>

        <TextView
            android:layout_marginTop="@dimen/space_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_20"
            android:textColor="@color/red_E3"
            android:text="@string/take_photo_note"/>
    </LinearLayout>
</RelativeLayout>